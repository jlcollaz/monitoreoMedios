<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card bg-dark border border-dark">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="text-light" for="">Fecha</label>
                            <input type="date" id="current_date" name="date" class="form-control bg-dark text-light">
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">¿Tipo de medio?</label>
                            <select name="media_type" id="media_type2" class="form-control bg-dark text-light" onclick="selectMedia2('{{data_body.type}}')">
                                <option >{{data_body.type}}</option>
                            </select>    
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">Título</label>
                            <input type="text" name="title" class="form-control bg-dark text-light" placeholder="Título" value="{{link.title}}" required>
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">¿Impacto?</label>
                            <select name="impact" id="impact2" class="form-control bg-dark text-light" onclick="selectImpact2('{{data_body.impact}}')">
                                <option >{{data_body.impact}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">¿Alcance?</label>
                            <select name="scope" id="scope2" class="form-control bg-dark text-light" onclick="selectScope2('{{data_body.scope}}')">
                                <option >{{data_body.scope}}</option>
                            </select>   
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">URL</label>
                            <input type="url" name="url" class="form-control bg-dark text-light" placeholder="URL" value="{{link.url}}" required>
                        </div>
                        <div class="form-group">
                            <label class="text-light" for="">Descripción</label>
                            <textarea name="description" rows="2" class="form-control bg-dark text-light"
                                placeholder="Descripción" required>{{link.description}}</textarea>
                        </div>
                        <div class="form-group" id="news_file">
                            <label for="file_news">Archivo</label>
                            <input type="file" class="form-control-file" id="file_news" name="file_news">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>