{{#if user.type_user}}
    <div class="container p-4">
        <div class="row">
            {{#each links}}
            <div class="col-md-3">
                <div class="card text-center bg-dark text-light">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank" class="text-light">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p class="text-muted">
                            {{timeago created_at}}
                        </p>
                        <a class="btn btn-danger" href="/links/delete/{{id}}">
                            Eliminar
                        </a>
                        <a class="btn btn-secondary" href="/links/edit/{{id}}">
                            Editar
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center bg-dark text-light">
                    <p>No hay noticias</p>
                    <a href="/links/add" class="text-success">A単ade noticias</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    
{{else}}
    <div class="container p-4">
        <form onchange="form_submit()" action="/links/filter" method="post" id="theForm">
            <div class="row">
                <div class="col-md-2 form-group">
                    <label class="text-light" for="">Fecha de inicio</label>
                    <input type="date" id="current_date" name="start_day" class="form-control bg-dark text-light" onchange="|">
                </div>
                <div class="col-md-2 form-group">
                    <label class="text-light" for="">Fecha de fin</label>
                    <input type="date" id="current_date2" name="end_day" class="form-control bg-dark text-light">
                </div>
                <div class="col-md-2 form-group">
                    <label class="text-light" for="">多Impacto?</label>
                    <select name="impact" class="form-control bg-dark text-light">
                        <option select>Todos</option>
                        <option value="1">Informativo</option>
                        <option value="2">Positivo</option>
                        <option value="3">Negativo</option>
                    </select>
                </div>
                <div class="col-md-2 form-group">
                    <label class="text-light" for="">多Alcance?</label>
                    <select name="scope" class="form-control bg-dark text-light">
                        <option select>Todos</option>
                        <option value="1">Local</option>
                        <option value="2">Regional</option>
                        <option value="3">Nacional</option>
                    </select>         
                </div>
                <div class="col-md-2 form-group">
                    <label class="text-light" for="">多Medio?</label>
                    <select name="media_type" class="form-control bg-dark text-light">
                        <option select>Todos</option>
                        <option value="1">Blog</option>
                        <option value="2">Escrito</option>
                        <option value="3">Podcast</option>
                    </select>         
                </div>  
            </div>
        </form>
        <div class="row">
            <div class="col-md-8 list_news">
                {{>news}}
            </div>
            <div class="col-md-4">  
            </div>
        </div>
    </div>
{{/if}}